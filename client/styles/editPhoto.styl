.photo-tools
  position absolute
  left 0
  top 0
  bottom 0
  background-color #fff
  z-index 999
  list-style none
  padding 20px
  margin 0


.photo-wrap
  background-size contain
  background-repeat no-repeat
  background-position center center
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  width 100vw
  height 100vh
  box-sizing border-box
  display flex
  flex-flow column nowrap
  justify-content center
  background-color #ddd

  .photo
    background-position center center
    background-size cover
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    z-index 1

  .photo-inner
    box-shadow 2px 4px 6px rgba(0,0,0,0.2)
    flex 0 0 auto
    width 500px
    height 500px
    max-width 100%
    margin 20px auto
    position relative

    .overlay
      background-color rgba(0,0,0,0.6)
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      z-index 99
      display flex
      flex-flow column nowrap
      justify-content flex-end

      &.light
        background-color rgba(255,255,255,0.6)

      .add-text-button
        background-color #1bb23a
        text-transform uppercase
        padding 20px 40px
        color #fff
        margin auto
        font-weight 700
        border-radius 100px

        &:hover
          background-color darken(#1bb23a, 15%)
          cursor pointer

      .caption
        margin 20px
        color #fff
        text-transform uppercase
        max-width 75%
        font-weight 900
        font-size 50px
        line-height 50px
