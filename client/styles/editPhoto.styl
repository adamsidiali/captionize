.captionizer-title
  position absolute
  bottom 10px
  left 10px
  text-transform uppercase
  z-index 99999
  color #333
  font-size 20px
  font-weight 700
  margin 0

  @media (max-width: 600px)
    left -200px

  i
    font-size 75%
    margin auto 5px

    &:hover
      cursor pointer
      color #aaa

.tools-toggle
  display none

  @media (max-width: 600px)
    display none
    position fixed
    top 10px
    left 0px
    z-index 99999
    background-color #222
    color #aaa
    padding 20px
    text-transform uppercase
    border-top-right-radius 5px
    border-bottom-right-radius 5px

    i
      margin-right 5px

.photo-tools
  position absolute
  left 0
  bottom 0
  top 0
  width 200px
  background-color #222
  z-index 999
  list-style none
  padding 0px
  margin 0
  display flex
  flex-flow column nowrap
  overflow-x hidden
  overflow-y auto

  @media (max-width: 600px)
    bottom auto
    right 0
    width 100%
    height 80px
    flex-flow row nowrap
    overflow-y hidden
    overflow-x auto

  &.disabled
    opacity 0.6
    pointer-events none

  li
    display flex
    flex-flow column nowrap
    margin 5px 0
    margin-left auto
    background-color #000
    border-radius 0px
    padding 20px
    width 100%
    flex 0 0 auto

    @media (max-width: 600px)
      width auto
      margin 0 5px
      background-color transparent

    &:last-of-type
      margin-bottom 50px

      @media (max-width: 600px)
        margin-bottom 0

    *
      margin auto

    &.title
      font-weight 400
      text-transform uppercase
      margin 0
      text-align center
      margin-top 20px
      padding 5px
      padding-right 15px
      box-sizing border-box
      background-color transparent
      flex-flow row nowrap
      justify-content flex-end
      color #ddd

      @media (max-width: 600px)
        display none

    &.back-to-upload
      font-size 80%
      font-weight 400
      border-radius 0
      color #1bb23a
      transition 150ms ease-in

      &:hover
        cursor pointer
        padding-right 20px
        transition 150ms ease-in

      i
        margin-right 5px
        margin-left 0

    &.action
      font-size 12px
      box-sizing border-box
      text-align center
      color #ddd
      transition 150ms ease-in

      &:hover
        background-color #444
        cursor pointer
        transition 150ms ease-in

      i
        font-size 18px
        margin 5px auto

        &.hide
          opacity 0



.photo-wrap
  background-size contain
  background-repeat no-repeat
  background-position center center
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  width 100vw
  height 100vh
  padding-left 200px
  box-sizing border-box
  display flex
  flex-flow column nowrap
  justify-content flex-start
  background-color #ddd
  overflow-x hidden
  overflow-y auto

  &.snapped
    width 612px
    height 612px
    padding-left 0
    display block
    background-color transparent

  @media (max-width: 600px)
    padding-left 0
    margin-top 80px

  .photo
    background-position center center
    background-size cover
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    z-index 1

  #photo-inner
    box-shadow 2px 4px 6px rgba(0,0,0,0.2)
    flex 0 0 auto
    width 50vw
    height 50vw
    max-width 100%
    margin 10vw
    position relative

    &.snapped
      width 612px
      height 612px
      margin 0
      box-shadow none
      position relative

    @media (max-width: 600px)
      width 80vw
      height 80vw

      &.snapped
        width 612px
        height 612px
        margin 0
        box-shadow none

    .overlay
      background-color rgba(0,0,0,0.5)
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      z-index 99
      width 100%
      display flex
      flex-flow column nowrap
      justify-content center
      overflow hidden
      text-overflow ellipsis
      padding 40px
      box-sizing border-box

      &.light
        background-color rgba(255,255,255,0.5)

      .add-text-button
        background-color #1bb23a
        text-transform capitalize
        padding 20px 40px
        color #fff
        margin auto
        font-weight 400
        border-radius 100px

        &:hover
          background-color darken(#1bb23a, 15%)
          cursor pointer

      #caption
        flex 0 0 auto
        margin 0px
        color #fff
        text-transform uppercase
        font-weight 400
        line-height 1
        oveflow hidden
        text-overflow ellipsis
        outline none

        &.light
          color #000

    .captionizer-icon
      position absolute
      bottom 0
      right 0
      margin 0px
      transform scale(0.3)

      &.snapped
        position fixed
        top 570px
        left 570px
        margin 0
        box-shadow none
        transform scale(0.5)
        bottom auto
        right auto

      .fa-sticky-note
        color #888
      .fa-bolt
        color #333

      &.light
        .fa-sticky-note
          color #aaa
        .fa-bolt
          color #ddd

#modal
  position fixed
  top 0px
  left 0px
  right 0px
  bottom 0px
  background-color #fff
  z-index 999999999999



.save-pic
  position fixed
  bottom 20px
  right 20px
  z-index 99999
  width 80px
  height 80px
  border-radius 80px
  background-color #1bb23a
  display flex
  flex-flow column nowrap
  box-shadow 2px 4px 6px rgba(0,0,0,0.25)

  i
    margin auto
    font-size 30px
    color #fff
