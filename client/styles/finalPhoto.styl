.final
  padding-top 0

  .back-to-editor
    background-color #333
    padding 10px
    color #1bb23a

    &:hover
      cursor pointer

    i
      margin-right 5px

  h1
    padding 20px
    color #1bb23a
    text-transform capitalize
    text-align center
    font-family "Roboto"
    font-weight 300
    font-size 16px

    span
      color #000
      font-size 30px
      display block
      line-height 1
      text-transform uppercase
      font-family "Oswald"
      font-weight 700
      margin 5px 0

  div
    width 800px
    max-width 100%
    margin 0 auto
    display flex
    flex-flow column nowrap
    align-items stretch

    @media (max-width: 600px)
      flex-flow column nowrap
      align-items stretch

    img
      flex 0 0 auto
      height 120px
      width 120px
      margin 20px auto

      @media (max-width: 600px)
        margin-bottom 40px
        margin-top 0px

    ul
      list-style none
      display flex
      flex-flow column nowrap
      justify-content center
      margin 0 auto
      padding 0
      flex 0 0 auto
      width 100%
      max-width 100%
      margin 20px 0
      margin-top 0

      @media (max-width: 600px)
        width 100%

      li
        flex 0 0 auto
        text-align center
        margin 5px auto
        border-radius 100px
        padding 20px 40px
        display flex
        flex-flow row nowrap
        justify-content center
        background-color #eee
        font-size 0.9em

        &:hover
          cursor pointer
          background-color #ddd

        i
          margin auto 0
          margin-right 5px

        &.download
          font-size 1.3em
          background-color #1bb23a
          color #fff

          a
            text-decoration none
            color #fff

          &:hover
            background-color darken(#1bb23a, 15%)
