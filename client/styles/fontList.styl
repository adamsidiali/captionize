.font-list-modal
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  background-color rgba(0,0,0,0.75)
  z-index 99999999999
  display flex
  flex-flow column nowrap
  justify-content flex-start

  span
    position absolute
    top 10px
    right 20px
    font-size 30px
    color #aaa
    z-index 999999999999

    &:hover
      cursor pointer

  h1
    color #1bb23a
    margin 0px auto
    margin-top 40px
    text-transform uppercase

  ul
    margin 20px
    list-style none
    display flex
    flex-flow row wrap
    overflow-x hidden
    overflow-y scroll

    li
      font-size 30px
      flex 0 0 auto
      width 31.33%
      margin 1%
      background-color #fff
      padding 40px
      text-align center
      box-sizing border-box

      &:hover
        border-bottom 10px solid #1bb23a
        padding-bottom 30px
        cursor pointer

      @media (max-width: 600px)
        width 98%
