.upload-wrap
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  width 100vw
  height 100vh
  display flex
  flex-flow column nowrap
  background-color #ddd
  justify-content center

  .upload
    background-color #1bb23a
    color #fff
    padding 20px 40px
    position relative
    margin auto
    border-radius 100px
    text-transform uppercase
    font-weight 700

    &:hover
      background-color darken(#1bb23a, 15%)

    input
      opacity 0
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      width 100%

      &:hover
        cursor pointer
